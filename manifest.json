{
  "manifest_version": 3,
  "name": "区域选择器",
  "version": "1.0",
  "description": "右键选择区域，查看 div/table 属性。",
    "permissions": ["contextMenus", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "区域选择"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png"
  }
}